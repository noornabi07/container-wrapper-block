{
  "apiVersion": "1",
  "name": "ctrb/container",
  "title": "Container Block",
  "description": "This is a wrapper block for other blocks within it.",
  "category": "common",
  "keywords": [
    "container",
    "wrapper",
    "gutenberg",
    "container-block"
  ],
  "textdomain": "container-block",
  "attributes": {
    "align": {
      "type": "string",
      "default": "none"
    },
    "cId": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": "I am bangladeshi horny boy. Please support me"
    },
    "tab": {
      "type": "string",
      "default": {
        "activeTab": "tab1"
      }
    },
    "columns": {
      "type": "object",
      "default": {
        "width": { "desktop": "100%", "tablet": "", "mobile": "" }
      }
    },
    "heightColumns": {
      "type": "object",
      "default": {
        "height": { "desktop": "", "tablet": "", "mobile": "" }
      }
    },
    "marginColumns": {
      "type": "object",
      "default": {
        "margin": { "desktop": {}, "tablet": {}, "mobile": {} }
      }
    },
    "paddingColumns": {
      "type": "object",
      "default": {
        "padding": {
          "desktop": {
            "top": "10px",
            "right": "10px",
            "bottom": "10px",
            "left": "10px"
          },
          "tablet": {
            "top": "10px",
            "right": "10px",
            "bottom": "10px",
            "left": "10px"
          },
          "mobile": {
            "top": "10px",
            "right": "10px",
            "bottom": "10px",
            "left": "10px"
          }
        }
      }
    },

    "background": {
      "type": "object",
      "default": {
        "normalBg": { "color": "#fff" },
        "hoverBg": { "color": "#fff" },
        "transition": 0.5
      }
    },

    "overlyBackground": {
      "type": "object",
      "default": {
        "isOverly": false,
        "blendType": "normal",
        "oNormalBg": { "color": "#fff" },
        "oHoverBg": { "color": "#fff" },
        "normalOpacity": 0.3,
        "hoverOpacity": 0.3,
        "hoverTransition": 0.4
      }
    },

    "innerBlockStyles": {
      "type": "object",
      "default": {
        "isFilterCss": false,
        "isWrapper": false,
        "isHeight": false,
        "contentAlign": "top",
        "contentColor": "#F7ED39",
        "border": {"radius": "5px"},
        "actionStyleButton": "normal",
        "overlyStyleButton": "normal",
        "borderStyleButton": "normal",
        "contentTypo": {"fontSize": 20}
      }
    },

    "shaped": {
      "type": "object",
      "default": {
        "shapedButton": "top",
        "topShaped": "none",
        "bottomShaped": "none",
        "topColors": "#006769",
        "bottomColors": "#006769",
        "topUploadSvg": {"url": ""},
        "bottomUploadSvg": {"url": ""},
        "isShaped": {
          "topUploadShaped": false,
          "bottomUploadShaped": false
        },
        "flip": {
          "isTopFlip": false,
          "isBottomFlip": false
        },
        "front": {
          "isTopFront": false,
          "isBottomFront": false
        }
      }
    },
    "shapedColumns": {
      "type": "object",
      "default": {
        "topWidth": {
          "desktop": "100%",
          "tablet": "",
          "mobile": ""
        },
        "bottomWidth": {
          "desktop": "100%",
          "tablet": "",
          "mobile": ""
        },
        "topHeight": {
          "desktop": "",
          "tablet": "",
          "mobile": ""
        },
        "bottomHeight": {
          "desktop": "",
          "tablet": "",
          "mobile": ""
        }
      }
    },
    
    "isFilterCss": {
      "type": "boolean",
      "default": false
    },
    "wrapAlignment": {
      "type": "string",
      "default": "none"
    }
  },

  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true,
      "columns": {
        "desktop": 1,
        "tablet": 1,
        "mobile": 1
      }
    }
  },
  "editorScript": "file:./../dist/editor.js"
}
